{
  "name": "recette-ranger",
  "version": "1.0.0",
  "description": "Application de gestion de recettes avec NestJS et Svelte SSR",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "nest build",
    "build:client": "vite build --outDir dist/client && node -e \"require('fs').copyFileSync('src/view/index.html', 'dist/client/index.html')\"",
    "build:ssr": "vite build --ssr src/view/entry-server.ts --outDir dist/server",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "npm run migrate:fix && npm run migrate:deploy && node dist/main",
    "migrate:fix": "npx prisma migrate resolve --applied 20251209204215_add_account_status && npx prisma migrate resolve --applied 20251209204905_create_store_table || true",
    "migrate:deploy": "npx prisma migrate deploy",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nest start --watch",
    "dev:client": "vite",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.8",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.8",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.8",
    "@nestjs/swagger": "^11.2.1",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.18.0",
    "@thisux/sveltednd": "^0.0.20",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cloudinary": "^2.8.0",
    "cookie-parser": "^1.4.7",
    "cropperjs": "^1.6.2",
    "csrf-csrf": "^4.0.3",
    "helmet": "^8.1.0",
    "lucide-svelte": "^0.553.0",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "sharp": "^0.34.4",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cropperjs": "^1.1.5",
    "@types/express": "^4.17.21",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.11.0",
    "@types/passport-jwt": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.2.4",
    "prisma": "^6.18.0",
    "sass": "^1.93.3",
    "svelte": "^5.0.0",
    "svelte-preprocess": "^6.0.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  }
}
